<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4 class="mypage-title">ステータス編集</h4>
    
        <%= form_with model:@status, url:admin_status_path(@status.id), local:true do |f| %>
          <div class="row">
            <div class="form-group">
              <td>
                <%= f.label :name, "ステータス名", class:"admin-status-name" %>
              </td>
              <td>
                <%= f.text_field :name %>
              </td>
            </div>
            <div class="form-group">
              <td>
                <%= f.submit "変更を保存", class: 'bnt btn-success rounded' %>
                <%= link_to "戻る", admin_statuses_path, class:"btn btn-primary ml-3" %>
              </td>
            </div>
          </div>
        <% end %>
    </div>
  </div>
</div>