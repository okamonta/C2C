<div class="container">
  <div class="row">
    <div class="col-md-8">
      <h2 class="user-name"><%= @user.full_name %>さんの会員情報編集</h2>
    </div>
      <div class="col-md-9"></div>
  </div>
  <div class="row">
    <div class="col-md-10">
    <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
    <table class="table table-noborder">
      <tbody>
        <tr>
          <td>顧客ID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td>名前</td>
          <td><%= @user.full_name %></td>
        </tr>

        <tr>
          <td>ニックネーム</td>
          <td>
            <div class= "field">
              <%= f.text_field :nick_name, autofocus: true, placeholder: "レイワ" %>
            </div>
          </td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= @user.email %></td>
        </tr>

        <% @user_genre = @user.genre %>
        <tr>
          <td>ジャンル</td>
          <td><%= @user_genre.name %></td>
        </tr>

        <% @user_status = @user.status %>
        <tr>
          <td>ステータス</td>
          <td><%= @user_status.name %></td>
        </tr>

        <tr>
          <td>アカウント</td>
          <td><%= @user.account %></td>
        </tr>
        
        <tr>
          <td>メッセージ</td>
          <td><%= f.text_area :message %></td>
        </tr>

        <tr>
          <td>会員ステータス</td>
          <td>
            <%= f.radio_button :active, :true %>
            <%= f.label :active, :"有効" %>
            <%= f.radio_button :active, :false %>
            <%= f.label :active, :"退会" %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td>
            <div class="actions">
              <%= f.submit "編集を保存する", class:"btn btn-success" %>
            </div>
          </td>
        </tr>

      </tbody>
    </table>
    <% end %>
  </div>
</div>