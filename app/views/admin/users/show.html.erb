<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h2 class="mypage-title"><%= @user.full_name %>さんの会員情報編集</h2>
    </div>
      <div class="col-md-9"></div>
  </div>
  <div class="row">
    <div class="col-md-8">
    <%= form_with model: @user, url: admin_user_path, local: true do |f| %>
    <table class="table table-noborder">
      <tbody>
        <tr>
          <td>顧客ID</td>
          <td><%= @user.id %></td>
        </tr>

        <tr>
          <td>名前</td>
          <td>
            <%= @user.full_name %>
          </td>
        </tr>

        <tr>
          <td>ニックネーム</td>
          <td>
            <%= @user.nick_name %>
          </td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td>
            <%= @user.email %>
          </td>
        </tr>

        <tr>
          <td>アカウント</td>
          <td>
              <%= @user.account %>
          </td>
        </tr>

        <tr>
          <% @user_genre = @user.genre %>
          <td>ジャンル</td>
          <td>
            <%= @user_genre.name %>
          </td>
        </tr>

        <tr>
          <% @user_status = @user.status %>
          <td>ステータス</td>
          <td>
              <%= @user_status.name %>
          </td>
        </tr>
        
        <tr>
          <td>会員ステータス</td>
          <td>
            <% if @user.active == true %>
              <span class="text-success font-weight-bold">会員</span>
            <% else %>
              <span class="text-danger font-weight-bold">退会</span>
            <% end %>
          </td>
        </tr>

        <tr>
          <td></td>
          <td>
            <div class="actions">
              <%= link_to "編集する", edit_admin_user_path(@user.id), class:"btn btn-success" %>
              <%= link_to "戻る", admin_users_path, class:"btn btn-primary ml-3" %>
            </div>
          </td>
        </tr>

      </tbody>
    </table>
    <% end %>
  </div>
</div>