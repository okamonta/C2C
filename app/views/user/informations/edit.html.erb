<div class="container mb-4">
  <div class="row justify-content-center">
    <div class="col-12 ml-12">
    <i class="fas fa-arrow-left"></i>
    <%= link_to "戻る", :back %>
    </div>
    <div class="col-md-12 col-sm-12 col-12">
      <div class="card">
        <div class="card-header">告知編集</div>
        <div card-body>
        <%= form_with model: @information, url: user_information_path(@information), local:true do |f| %>
        
          <div class="form-group row py-1">
            <label for="title" class="col-md-4 col-form-label text-md-right">
              <%= f.label :title %>
            </label>
            <div class="col-md-6">
              <%= f.text_field :title, class: 'form-control information_title' %>
            </div>
          </div>

          <div class="form-group row py-1">
            <label for="content" class="col-md-4 col-form-label text-md-right">
              <%= f.label :content %>
            </label>
            <div class="col-md-6">
              <%= f.text_field :content, class: 'form-control information_content' %>
            </div>
          </div>
          
          <div class="form-group row mb-0">
            <div class="col-md-6 offset-md-4 text-center mt-2 mb-5 mx-auto">
              <%= f.submit "変更保存",  class: 'btn btn-success' %>
            </div>
          </div>
          
        <% end %>
        </div>
      </div>
    </div>
  </div>
</div>